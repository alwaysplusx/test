<?xml version="1.0"?>
<openejb>
  <Resource id="jdbc/harmony" type="javax.sql.DataSource">
    JdbcDriver org.h2.Driver
    JdbcUrl jdbc:h2:file:~/.h2/harmony
    UserName sa
    Password
  </Resource>
  <TransactionManager id="jta/harmony" type="TransactionManager">
    defaultTransactionTimeout = 10 seconds
  </TransactionManager>
</openejb>